<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kindersmart">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/kindersmart_yellow"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/kindersmart_yellow"
        android:supportsRtl="true"
        android:testOnly="false"
        android:theme="@style/SplashTheme">
        <activity android:name=".Activity.SplashScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.LoadingScreen"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".Activity.PengenalanActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.QuizActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.HighscoreActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.MenuActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".Activity.KategoriActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.VideoEdukasiActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.RecentScoreActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.YoutubePlayerActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>