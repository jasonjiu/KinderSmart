<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/green"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@drawable/chalkboard_border"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/linear1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linear2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:textColor="@color/chalk"
                android:id="@+id/soal"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_centerInParent="true"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:background="@drawable/border" />

                <ImageView
                    android:id="@+id/ivSoalTebakGambar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                   android:layout_centerInParent="true"
                    android:src="@drawable/progress_animation" />

            </RelativeLayout>



            <ImageView
                android:id="@+id/ivSoundTebakGambar"
                android:layout_margin="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:layout_below="@id/linear2"
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginBottom="10dp"
            android:background="@color/chalk" />

        <RelativeLayout
            android:layout_below="@+id/view"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linear3"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:textColor="@color/white"
                    android:text="@string/textpreview"
                    android:backgroundTint="@color/chalky_yello"
                    android:background="@drawable/roundbtn"
                    android:layout_marginEnd="70dp"
                    android:id="@+id/btnJawabTebak1"
                    android:layout_width="120dp"
                    android:layout_height="70dp"/>

                <Button
                    android:text="@string/textpreview"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/chalky_yello"
                    android:background="@drawable/roundbtn"
                    android:id="@+id/btnJawabTebak2"
                    android:layout_width="120dp"
                    android:layout_height="70dp"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linear4"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/linear3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:text="@string/textpreview"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/chalky_yello"
                    android:background="@drawable/roundbtn"
                    android:layout_marginEnd="70dp"
                    android:id="@+id/btnJawabTebak3"
                    android:layout_width="120dp"
                    android:layout_height="70dp"/>

                <Button
                    android:text="@string/textpreview"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/chalky_yello"
                    android:background="@drawable/roundbtn"
                    android:id="@+id/btnJawabTebak4"
                    android:layout_width="120dp"
                    android:layout_height="70dp"/>

            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>