<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/green"
    android:foreground="@drawable/transparent"
    tools:context=".Activity.HighscoreActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tbHighScore"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        app:titleTextColor="@android:color/white"
        android:layout_height="wrap_content"
        android:background="@color/wood">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/score"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:textColor="@color/chalk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nilai_tertinggi"
            android:textSize="17sp"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:id="@+id/tvtbTitle" />

        <ImageView
            android:id="@+id/ivtbExit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/exit"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"/>

    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView
        android:layout_below="@id/tbHighScore"
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/yellow"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivHsHewan"
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:background="@drawable/border"
                        android:src="@drawable/egg"
                        android:padding="10dp"
                        android:scaleType="fitCenter">

                    </ImageView>

                    <TextView
                        android:id="@+id/nilaiHewan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nilai_tertinggi_tebak_hewan"
                        android:textAlignment="center"
                        android:textSize="13sp"
                        android:textColor="@color/wood"
                        android:textStyle="bold"
                        android:layout_toEndOf="@+id/ivHsHewan"
                        android:paddingTop="10dp"/>

                    <TextView
                        android:id="@+id/tvHsHewan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nilaiHewan"
                        android:layout_toEndOf="@+id/ivHsHewan"
                        android:gravity="center"
                        android:textColor="@color/green"
                        android:text="@string/_0"
                        android:layout_marginTop="25dp"
                        android:textStyle="bold"
                        android:textSize="20sp" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/yellow"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivHsBuah"
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:background="@drawable/border"
                        android:src="@drawable/egg"
                        android:padding="10dp"
                        android:scaleType="fitCenter">
                    </ImageView>

                    <TextView
                        android:id="@+id/nilaiBuah"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nilai_tertinggi_tebak_buah"
                        android:textAlignment="center"
                        android:textSize="13sp"
                        android:textColor="@color/wood"
                        android:textStyle="bold"
                        android:layout_toEndOf="@+id/ivHsBuah"
                        android:paddingTop="10dp"/>

                    <TextView
                        android:id="@+id/tvHsBuah"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nilaiBuah"
                        android:layout_toEndOf="@+id/ivHsBuah"
                        android:gravity="center"
                        android:textColor="@color/green"
                        android:text="@string/_0"
                        android:layout_marginTop="25dp"
                        android:textStyle="bold"
                        android:textSize="20sp" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/yellow"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivHsOrgan"
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:background="@drawable/border"
                        android:src="@drawable/egg"
                        android:padding="10dp"
                        android:scaleType="fitCenter">
                    </ImageView>

                    <TextView
                        android:id="@+id/nilaiOrgan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nilai_tertinggi_tebak_organ"
                        android:textAlignment="center"
                        android:textSize="13sp"
                        android:textColor="@color/wood"
                        android:textStyle="bold"
                        android:layout_toEndOf="@+id/ivHsOrgan"
                        android:paddingTop="10dp"/>

                    <TextView
                        android:id="@+id/tvHsOrgan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nilaiOrgan"
                        android:layout_toEndOf="@+id/ivHsOrgan"
                        android:gravity="center"
                        android:textColor="@color/green"
                        android:text="@string/_0"
                        android:layout_marginTop="25dp"
                        android:textStyle="bold"
                        android:textSize="20sp" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/yellow"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivHsWarna"
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:background="@drawable/border"
                        android:src="@drawable/egg"
                        android:padding="10dp"
                        android:scaleType="fitCenter">
                    </ImageView>

                    <TextView
                        android:id="@+id/nilaiWarna"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nilai_tertinggi_tebak_warna"
                        android:textAlignment="center"
                        android:textSize="13sp"
                        android:textColor="@color/wood"
                        android:textStyle="bold"
                        android:layout_toEndOf="@+id/ivHsWarna"
                        android:paddingTop="10dp"/>

                    <TextView
                        android:id="@+id/tvHsWarna"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nilaiWarna"
                        android:layout_toEndOf="@+id/ivHsWarna"
                        android:gravity="center"
                        android:textColor="@color/green"
                        android:text="@string/_0"
                        android:layout_marginTop="25dp"
                        android:textStyle="bold"
                        android:textSize="20sp" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/yellow"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivHsPenjumlahan"
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:background="@drawable/border"
                        android:src="@drawable/egg"
                        android:padding="10dp"
                        android:scaleType="fitCenter">
                    </ImageView>

                    <TextView
                        android:id="@+id/nilaiPenjumlahan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nilai_tertinggi_penjumlahan"
                        android:textAlignment="center"
                        android:textSize="13sp"
                        android:textColor="@color/wood"
                        android:textStyle="bold"
                        android:layout_toEndOf="@+id/ivHsPenjumlahan"
                        android:paddingTop="10dp"/>

                    <TextView
                        android:id="@+id/tvHsPenjumlahan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nilaiPenjumlahan"
                        android:layout_toEndOf="@+id/ivHsPenjumlahan"
                        android:gravity="center"
                        android:textColor="@color/green"
                        android:text="@string/_0"
                        android:layout_marginTop="25dp"
                        android:textStyle="bold"
                        android:textSize="20sp" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/yellow"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivHsPengurangan"
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:background="@drawable/border"
                        android:src="@drawable/egg"
                        android:padding="10dp"
                        android:scaleType="fitCenter">
                    </ImageView>

                    <TextView
                        android:id="@+id/nilaiPengurangan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nilai_tertinggi_pengurangan"
                        android:textAlignment="center"
                        android:textSize="13sp"
                        android:textColor="@color/wood"
                        android:textStyle="bold"
                        android:layout_toEndOf="@+id/ivHsPengurangan"
                        android:paddingTop="10dp"/>

                    <TextView
                        android:id="@+id/tvHsPengurangan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nilaiPengurangan"
                        android:layout_toEndOf="@+id/ivHsPengurangan"
                        android:gravity="center"
                        android:textColor="@color/green"
                        android:text="@string/_0"
                        android:layout_marginTop="25dp"
                        android:textStyle="bold"
                        android:textSize="20sp" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/yellow"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivHsHitungGambar"
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:background="@drawable/border"
                        android:src="@drawable/egg"
                        android:padding="10dp"
                        android:scaleType="fitCenter">
                    </ImageView>

                    <TextView
                        android:id="@+id/nilaiHitungGambar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nilai_tertinggi_hitung_gambar"
                        android:textAlignment="center"
                        android:textSize="13sp"
                        android:textColor="@color/wood"
                        android:textStyle="bold"
                        android:layout_toEndOf="@+id/ivHsHitungGambar"
                        android:paddingTop="10dp"/>

                    <TextView
                        android:id="@+id/tvHsHitungGambar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nilaiHitungGambar"
                        android:layout_toEndOf="@+id/ivHsHitungGambar"
                        android:gravity="center"
                        android:textColor="@color/green"
                        android:text="@string/_0"
                        android:layout_marginTop="25dp"
                        android:textStyle="bold"
                        android:textSize="20sp" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/yellow"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivHsTebakAngka"
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:background="@drawable/border"
                        android:src="@drawable/egg"
                        android:padding="10dp"
                        android:scaleType="fitCenter">
                    </ImageView>

                    <TextView
                        android:id="@+id/nilaiTebakAngka"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nilai_tertinggi_tebak_angka"
                        android:textAlignment="center"
                        android:textSize="13sp"
                        android:textColor="@color/wood"
                        android:textStyle="bold"
                        android:layout_toEndOf="@+id/ivHsTebakAngka"
                        android:paddingTop="10dp"/>

                    <TextView
                        android:id="@+id/tvHsTebakAngka"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nilaiTebakAngka"
                        android:layout_toEndOf="@+id/ivHsTebakAngka"
                        android:gravity="center"
                        android:textColor="@color/green"
                        android:text="@string/_0"
                        android:layout_marginTop="25dp"
                        android:textStyle="bold"
                        android:textSize="20sp" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>


</android.support.v4.widget.NestedScrollView>

</LinearLayout>