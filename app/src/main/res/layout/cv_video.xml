<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/green"
    android:foreground="@drawable/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">


    <RelativeLayout
        android:background="@color/green"
        android:id="@+id/layoutYoutube"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.youtube.player.YouTubeThumbnailView
            android:paddingTop="5dp"
            android:background="@color/green"
            android:id="@+id/video_thumbnail_image_view"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/play"/>

        <TextView
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:id="@+id/tvVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textpreview"
            android:textColor="@color/chalk"
            android:gravity="left"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingStart="10dp"
            android:layout_below="@id/video_thumbnail_image_view"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>