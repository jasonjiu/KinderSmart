<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/green"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@drawable/chalkboard_border"
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginTop="50dp"
            android:id="@+id/linear2"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">




            <ImageView
                android:id="@+id/ivBorder"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_centerInParent="true"
                android:background="@drawable/backgroundimage"/>

            <ImageView
                android:layout_marginTop="20dp"
                android:id="@+id/ivKenal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/progress_animation"/>




        </RelativeLayout>

        <View
            android:layout_below="@id/linear2"
            android:id="@+id/view"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginBottom="10dp"
            android:background="@color/chalk" />

        <RelativeLayout
            android:id="@+id/linear3"
            android:orientation="horizontal"
            android:layout_below="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/ivSoundKenal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/chalk"
                android:src="@drawable/ic_volume_up_black_24dp"/>

            <TextView
                android:id="@+id/tvKenal"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text="@string/textpreview"
                android:textAlignment="center"
                android:textColor="@color/chalk"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <View
            android:layout_marginTop="20dp"
            android:layout_below="@id/linear3"
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/chalk" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_below="@id/view2">
            <ImageView
                android:visibility="visible"
                android:id="@+id/ivBackKenal"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_centerVertical="true"
                android:tint="@color/chalk"
                android:src="@drawable/ic_arrow_back_black_24dp" />

            <ImageView
                android:visibility="visible"
                android:id="@+id/ivNextKenal"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:tint="@color/chalk"
                android:src="@drawable/ic_arrow_forward_black_24dp" />
        </RelativeLayout>




    </RelativeLayout>

</android.support.v7.widget.CardView>